<div class="container" id="novedades">
    <div class="row">
        <div class="col">

            <div class="container">
                <div class="row">
                    <div class="col logoutBtn">
                        <h4 class="text-end">Hola {{ usuario }}!!
                            <a href="/admin/login/logout" class="btn btn-sm btn-danger">
                            Cerrar sesión <i class="fa fa-sign-out"></i></a></h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-7">
                        <h3>Listado de Novedades</h3>
                    </div>
                    <div class="col-5 text-end">
                        <a href="/novedades/agregar" class="btn btn-success"> <i class="fa fa-plus"></i> Nuevo</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Título</th>
                                    <th scope="col">Subtítulo</th>
                                    <th scope="col">Imagen</th>
                                    <th scope="col" class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each novedades}}
                                <tr>
                                    <th scope="row"> {{id}}</th>
                                    <td>{{titulo}}</td>
                                    <td>{{subtitulo}}</td>
                                    <td>{{{imagen}}}</td>
                                    <td class="text-end">
                                        <a href="/novedades/modificar/{{id}}" style="margin-bottom:5px" title="Editar" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></a>
                                        <a href="/novedades/eliminar/{{id}}" style="margin-bottom:5px" title="Eliminar" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                                        <a href="/novedades/getCuerpo/{{id}}" title="Cuerpo" class="btn btn-sm btn-secondary"><i class="far fa-eye"></i></a>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                         {{#if cuerpo}}
                        <table>
                            <thead class="thead-dark">
                                <tr><th scope="col">"Cuerpo de la noticia"</th></tr>
                            </thead>
                            <tbody>
                                <tr><td>ID:{{cuerpo.id}}</td></tr>
                                <tr><td>{{cuerpo.cuerpo}}</td></tr>
                            </tbody>
                        </table>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



